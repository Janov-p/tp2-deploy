# Flask environment (development/production)
FLASK_ENV=development

# JWT Configuration
# In production, use a strong, randomly generated secret key
# You can generate one using: python -c 'import secrets; print(secrets.token_hex(32))'
JWT_SECRET_KEY=your-secret-key-here

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///app.db
# For production (Cloud SQL PostgreSQL)
# DATABASE_URL=postgresql+psycopg2://USER:PASSWORD@/DATABASE?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME

# Note: PORT is automatically set by Cloud Run in production 